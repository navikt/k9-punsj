<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.3.4.RELEASE</version>
		<relativePath/>
	</parent>
	<groupId>no.nav.k9</groupId>
	<artifactId>k9-punsj-parent</artifactId>
	<version>${revision}${sha1}${changelist}</version>
	<name>k9-punsj-parent</name>
	<description>Håndterer manuell `punching` av papirsøknader som kommer inn for ytelser i Kapittel 9</description>
	<packaging>pom</packaging>

	<properties>
		<revision>1.0.0</revision>
		<sha1></sha1>
		<changelist>-SNAPSHOT</changelist>
		<kotlin.version>1.4.10</kotlin.version>
		<springdoc.version>1.4.8</springdoc.version>
		<kotlinx-coroutines.version>1.4.0</kotlinx-coroutines.version>
		<logback.logstash.version>6.4</logback.logstash.version>
		<token-support.version>1.3.1</token-support.version>
		<dusseldorf-ktor.version>1.4.1.4754df6</dusseldorf-ktor.version>
        <k9-rapid.version>1.2d2610c</k9-rapid.version>
		<soknad-pleiepenger-barn.version>5.0.0-20200806083358-23cb01c</soknad-pleiepenger-barn.version>
		<de.huxhorn.sulky.ulid.version>8.2.0</de.huxhorn.sulky.ulid.version>
		<mockk.version>1.10.2</mockk.version>
		<jsonassert.version>1.5.0</jsonassert.version>
	</properties>

    <modules>
        <module>app</module>
        <module>mocks</module>
        <module>mock-server</module>
    </modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>no.nav.k9</groupId>
				<artifactId>punsj-mocks</artifactId>
				<version>${project.version}</version>
			</dependency>

			<dependency>
				<groupId>org.springdoc</groupId>
				<artifactId>springdoc-openapi-webflux-ui</artifactId>
				<version>${springdoc.version}</version>
			</dependency>

			<dependency>
				<groupId>org.jetbrains.kotlinx</groupId>
				<artifactId>kotlinx-coroutines-core</artifactId>
				<version>${kotlinx-coroutines.version}</version>
			</dependency>
			<dependency>
				<groupId>org.jetbrains.kotlinx</groupId>
				<artifactId>kotlinx-coroutines-reactor</artifactId>
				<version>${kotlinx-coroutines.version}</version>
			</dependency>
			<!-- Authentication -->
			<dependency>
				<groupId>no.nav.security</groupId>
				<artifactId>token-validation-core</artifactId>
				<version>${token-support.version}</version>
			</dependency>
			<dependency>
				<groupId>no.nav.helse</groupId>
				<artifactId>dusseldorf-oauth2-client</artifactId>
				<version>${dusseldorf-ktor.version}</version>
			</dependency>
			<dependency>
				<groupId>no.nav.helse</groupId>
				<artifactId>dusseldorf-test-support</artifactId>
				<version>${dusseldorf-ktor.version}</version>
			</dependency>
			<!-- Monitorering -->
			<dependency>
				<groupId>net.logstash.logback</groupId>
				<artifactId>logstash-logback-encoder</artifactId>
				<version>${logback.logstash.version}</version>
			</dependency>
			<dependency>
				<groupId>org.jetbrains.kotlinx</groupId>
				<artifactId>kotlinx-coroutines-slf4j</artifactId>
				<version>${kotlinx-coroutines.version}</version>
			</dependency>
			<!-- Meldingsformater -->
			<dependency>
				<groupId>org.skyscreamer</groupId>
				<artifactId>jsonassert</artifactId>
				<version>${jsonassert.version}</version>
			</dependency>
			<dependency>
				<groupId>no.nav.k9</groupId>
				<artifactId>soknad-pleiepenger-barn</artifactId>
				<version>${soknad-pleiepenger-barn.version}</version>
			</dependency>
			<dependency>
				<groupId>no.nav.k9.rapid</groupId>
				<artifactId>overfore-omsorgsdager</artifactId>
				<version>${k9-rapid.version}</version>
			</dependency>
			<dependency>
				<groupId>no.nav.k9.rapid</groupId>
				<artifactId>behov</artifactId>
				<version>${k9-rapid.version}</version>
			</dependency>
			<!-- Testing -->
			<dependency>
				<groupId>io.mockk</groupId>
				<artifactId>mockk</artifactId>
				<version>${mockk.version}</version>
			</dependency>
			<!-- Annet -->
			<dependency>
				<groupId>de.huxhorn.sulky</groupId>
				<artifactId>de.huxhorn.sulky.ulid</artifactId>
				<version>${de.huxhorn.sulky.ulid.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<repositories>
		<repository>
			<id>github</id>
			<name>GitHub dussseldorf-ktor Apache Maven Packages</name>
			<url>https://maven.pkg.github.com/navikt/dusseldorf-ktor/</url>
		</repository>
	</repositories>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-maven-plugin</artifactId>
				</plugin>
				<plugin>
					<groupId>org.jetbrains.kotlin</groupId>
					<artifactId>kotlin-maven-plugin</artifactId>
					<configuration>
						<args>
							<arg>-Xjsr305=strict</arg>
						</args>
						<compilerPlugins>
							<plugin>spring</plugin>
						</compilerPlugins>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>org.jetbrains.kotlin</groupId>
							<artifactId>kotlin-maven-allopen</artifactId>
							<version>${kotlin.version}</version>
						</dependency>
					</dependencies>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
